<table>
  <tr>
    <th>Surname</th>
    <th>Group</th>
    <th>Semestr</th>
    <th>>=GPA</th>
    <th><=GPA</th>
  </tr>

  <tr>
  <%= form_tag ('/pages/index'), :method => :get, :remote => true do %>
    <th>
      <div class="field">
        <%= text_field_tag :surname, params[:f_surname] %>
      </div>
    </th>
    <th>
      <div class="field">
        <%= select_tag :group_id ,options_for_select(@groups), prompt: 'select group' %>
      </div>
    </th>
    <th>
      <div class="field">
        <%= select_tag :semestr, options_for_select(@semestrs), prompt: 'select semestr' %>
      </div>
    </th>
    <th>
      <div class="field">
        <%= number_field_tag :gpa_greater_or_equal, params[:gpa_greater_or_equal] %>
      </div>
    </th>
    <th>
      <div class="field">
        <%= number_field_tag :gpa_less_or_equal, params[:gpa_less_or_equal] %>
      </div>
    </th>
    <th>
      <div class="actions">
        <%= submit_tag "search" %>
      </div>
    </th>
  <% end %>
  </tr>
  <tr>
  <%= form_tag ('/pages/ip_character'), :method => :get, :remote => :true do %>
     <th>
      <div class="actions">
        <%= submit_tag "ip + character" %>
      </div>
    </th> 
  <% end %>
  </tr>
</table>